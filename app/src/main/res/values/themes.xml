<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NightAdjusted.Theme.EasyAI" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- The final theme we use -->
    <style name="Theme.EasyAI" parent="NightAdjusted.Theme.EasyAI">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.EasyAI.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.EasyAI</item>
    </style>
</resources>